{
    "name": "Java Development Environment",
    "image": "ubuntu:latest",
    "extensions": [
        "vscjava.vscode-java-pack",
        "ms-azuretools.vscode-docker"
    ],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y openjdk-11-jdk"
}
